@{
    ViewData["Title"] = "Set Password";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">

        <div class="govuk-form-group">
            <fieldset class="govuk-fieldset">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">
                        Set a new password for [user-mail@email.co.uk]
                    </h1>
                </legend>
                <div id="password-1-hint" class="govuk-hint govuk-!-margin-top-3">
                    Your password must:
                    <ul class="govuk-hint govuk-list govuk-list--bullet">
                        <li>be at least 10 characters</li>
                        <li>have at least 1 letter and 1 number</li>
                    </ul>
                </div>
                <div class="govuk-form-group">
                    <label class="govuk-label" for="password-1">
                        Password
                    </label>
                    <input class="govuk-input govuk-!-width-three-quarters" id="password-1" name="password-1" type="text" value="">
                </div>
                <div class="govuk-form-group">
                    <label class="govuk-label" for="password-2">
                        Retype password
                    </label>
                    <input class="govuk-input govuk-!-width-three-quarters" id="password-2" name="password-2" type="text" value="">
                </div>
            </fieldset>
        </div>

        <form class="form" action="../account-home/account-home" method="get">

            <button class="govuk-button" data-module="govuk-button">Set password</button>

        </form>

    </div>
</div>